#lang racket

(define (вести-себя-с-детьми-осознанно)
  (let* (
         ;; Поведение Макса — архитектура детства
         [макс-ребенок? #t]
         [самоконтроль-есть? #f]
         [архитектура-поведения
          (list 'энергия
                'импульс
                'незрелость-нейросети
                'отсутствие-метапозиции
                'неплохой-а-просто-детский)]

         ;; Твои автоматизмы — источник реакции
        [автомат-реакции
        (list
          (list 'оценка 'категорически-отвергаю)
          (list 'характеристика '(реактивный разрушительный))
          (list 'структура '(впитано-из-детства
                             не-выбиралось-сознательно
                             программа-прошлого)))]

         ;; Напоминание о возможности выбора
         [агент-созидания? #t]
        )

    ;; Основной вызов к действию
    (when агент-созидания?
      (list 'замедлись
            'не-реагируй-автоматом
            'помни-архитектуру-ребенка
            'будь-мягок
            'будь-сознателен
            'будь-сознателен))))


