model: {

  concept: незнание,

  description: [
    => 'Картографическая-пустота — белое пятно на карте знания, которое может быть либо 'исследовано, либо замещено 'иллюзией,
    => Условие подлинной 'любознательности — когда осознано, а не вытеснено,
    => Потенциальная 'слепая-зона, если не сопровождается рефлексией и сомнением,
    => Зона 'риска, в которой могут возникать 'догмы, 'магическое-мышление или 'отказ от 'размышления,
    => Исходная точка научного метода — пространство, откуда рождается гипотеза,
  ],

  type: метафункция,
  context: [философия, эпистемология, наука, когнитивные науки],

  transforms: [
    { input: незнание, output: вопрос },
    { input: осознанное незнание, output: любознательность },
    { input: неосознанное незнание, output: иллюзия знания },
    { input: признание незнания, output: готовность к обучению }
  ],

  relates_to: [
    { concept: знание, relation: противопоставление },
    { concept: сомнение, relation: сопутствующее состояние },
    { concept: вопрос, relation: порождает },
    { concept: любопытство, relation: порождает при осознанности },
  ],

  abstraction_level: 2,
  role: источник движения мышления,

  interpretations: [
    {
      context: философия,
      role: предел и мотив познания,
      meaning: Незнание — условие, при котором мышление начинает движение
    },
    {
      context: наука,
      role: мотивация для исследований,
      meaning: Точка, с которой начинается формулировка гипотез
    },
    {
      context: психология,
      role: зона тревоги или роста,
      meaning: То, как человек реагирует на незнание, определяет его стратегию адаптации
    }
  ],

  open_questions: [
    Как различать плодотворное и парализующее незнание?,
    Можно ли обучить отношению к незнанию как ресурсу?,
    Всегда ли признание незнания полезно, или бывают ситуации, где оно мешает действию?
  ],

  example_compositions: [
    {
      pattern: [незнание, сомнение, вопрос],
      description: Последовательность, в которой осознание незнания вызывает сомнение, а затем формулируется направленный вопрос
    },
    {
      pattern: [незнание, авторитет, догма],
      description: Когда незнание прикрывается авторитетом, формируется иллюзия знания — догма
    },
    {
      pattern: [незнание, любознательность, обучение],
      description: Осознанное признание незнания вызывает интерес и запускает процесс обучения
    }
  ],

  meta_tags: [эпистемология, когнитивная динамика, онтология знания]
}












