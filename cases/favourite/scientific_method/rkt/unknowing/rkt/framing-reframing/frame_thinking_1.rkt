#lang racket


; frame: {
;   id: Вера,
;   keywords: [страдание, боль, мораль, история, смысл, эволюция, сложность],
;   style: интерпретация через религиозные допущения,
;   allows: сомнение и исследование внутри ключевых тем,
;   blocks: выход за пределы метафизических границ
; }

;  1. Определим рамку: вера-рамка как список ключевых тем
(define вера-рамка '(страдание боль мораль история эволюция сложность смысл))



; 2. Функция внутри-рамки? — проверяет, входит ли тема в список ключей
(define (внутри-рамки? тема рамка)
  (member тема рамка)) ; возвращает #t если тема в списке рамки



(внутри-рамки? 'страдание вера-рамка)




; 3. Агент: ограниченно-активное-незнание?
(define (ограниченно-активное-незнание? тема интерес сомнение рамка)
  (cond
    [(and интерес сомнение (внутри-рамки? тема рамка))
     'активен-в-рамке]
    [(and интерес сомнение)
     'активен-вне-рамки]
    [(or интерес сомнение)
     'пограничное-состояние]
    [else
     'пассивность]))


; 4. Пример вызова:
(define тема 'эволюция)
(define интерес #t)
(define сомнение #t)

(ограниченно-активное-незнание? тема интерес сомнение вера-рамка)
;; => 'активен_в_рамке


;  5. Пример с темой вне рамки

(define тема2 'искусственный-интеллект)

(ограниченно-активное-незнание? тема2 интерес сомнение вера-рамка)
;; => 'активен_вне_рамки






