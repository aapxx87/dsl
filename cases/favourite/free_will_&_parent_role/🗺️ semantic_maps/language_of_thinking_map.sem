healthy_explanation_pattern: {

  [Ситуация]
    Ребёнок задаёт вопрос, наблюдает аномалию или сталкивается с непонятным:
    — "Почему люди притворяются, что им весело?"
    — "Почему в сказках добрые иногда проигрывают?"
    — "Почему мама говорит одно, а делает другое?"
  ↓

  [Ответ взрослого]
    explanation_style: "исследовательский / эмпатийно-причинный"
    tone: "спокойный / заинтересованный / включённый"
    framing: "Мир можно осмысливать — не всё очевидно, но можно пробовать"
    metaphoric_layer: "мягкие метафоры, аналогии (волны, сцена, карты, туман → путь)"
  ↓

  [Активируемые кодировки]
    format_of_reasoning: "цепочечный / гибкий / допускающий множественность"
    pattern_of_explaining_world: "Мир сложен, но поддаётся пониманию / можно искать"
    internal_dialogue_style: "поддерживающий и размышляющий, без страха ошибиться"
  ↓

  [Долгосрочные эффекты]
    narrative_identity: "исследователь / наблюдатель с субъектной позицией"
    type_of_inner_voice: "мягкий аналитик / партнёр в размышлении"
    critical_thinking: "развивается как эмпатийное и логичное"
    style_of_reasoning: "гибкое, рефлексивное, допуская неизвестность"
  ↓

  [Формула]
    → взрослый признаёт ценность вопроса  
    → предлагает соразмышление  
    → не даёт единственно правильного ответа  
    → показывает структуру объяснения  
    → оставляет ребёнку пространство для собственной версии
   => explanation_formula_expanded: 
      [Признать значимость] + 
      [Предложить исследование] + 
      [Избежать догмы] + 
      [Показать логику] + 
      [Поддержать самостоятельность]

    5_step_model_of_healthy_explanation: {
      step_1: "Признание — 'Это важный вопрос'",
      step_2: "Соразмышление — 'Давай подумаем вместе…'",
      step_3: "Недогматичность — 'Есть разные версии…'",
      step_4: "Структура — 'Сначала произошло…, потом…'",
      step_5: "Пространство — 'А как ты это видишь?'"
    }


  [Пример формулировки]
    "Иногда люди притворяются, потому что боятся, что их не поймут. А ты замечал что-то похожее? Хочешь вместе попробовать разобраться, почему так бывает?"
  → это-создаёт: доверие к мышлению, тренировку анализа, эмоциональную безопасность

}



healthy_explanation_generator: {

  input: {
    child_question: <вопрос-ребёнка>
    context: <ситуация/тема>  # например: моральное противоречие, эмоции, поведение, смерть, ложь, социальные правила
    emotion_detected: <эмоция-ребёнка>  # опционально: страх, растерянность, злость, интерес
  }

  steps: {

    1_recognize_importance:
      template: "Ты задал важный вопрос: '${child_question}'"
      alternatives: [
        "Ты серьёзно задумался об этом — это круто",
        "Интересно, что ты это заметил",
        "Многие взрослые тоже об этом думают — и это не просто"
      ]

    2_invite_joint_thinking:
      template: "Хочешь вместе попробовать разобраться, почему ${context}?"
      alternatives: [
        "Давай подумаем об этом вместе — тут есть над чем задуматься",
        "А как ты это сам понимаешь?",
        "Попробуем понаблюдать, как это бывает в жизни?"
      ]

    3_avoid_finality:
      template: "Тут нет одного правильного ответа — бывает по-разному"
      alternatives: [
        "Можно смотреть с разных сторон",
        "Каждый человек может видеть это по-своему",
        "Я сам не уверен на 100%, но могу поделиться своей версией"
      ]

    4_structure_explanation:
      template: "Сначала происходит X, потом Y, а иногда ещё и Z"
      instruction: "Разверни возможную причинно-следственную цепочку или контекст — адаптированно к возрасту"

    5_leave_space_for_child:
      template: "А ты как думаешь? Что тебе ближе из этого?"
      alternatives: [
        "Хочешь попробовать объяснить это сам?",
        "Как бы ты рассказал это кому-то другому?",
        "Что из этого тебе откликается, а что — нет?"
      ]

    6_optional_metaphor:
      template: "Иногда это похоже на ${образ}"
      examples: [
        "волны на море (про эмоции)",
        "переход через мост (про страх нового)",
        "лабиринт с разными выходами (про сложные решения)",
        "театр, где каждый играет свою роль (про поведение людей)"
      ]
  }
  
  output_structure:
    full_response: [
      1_recognize_importance,
      2_invite_joint_thinking,
      3_avoid_finality,
      4_structure_explanation,
      5_leave_space_for_child,
      6_optional_metaphor?
    ]
}









